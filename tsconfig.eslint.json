{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "jsx": "preserve"
  },
  "include": [
    "packages/*/*.js",
    "packages/*/src/**/*.ts",
    "packages/*/test/**/*.ts",
    "packages/*/tests/**/*.ts",
    "examples/**/*.ts",
    "examples/**/*.js",
    "examples/**/*.tsx"
  ]
}